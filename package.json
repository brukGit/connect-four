{
  "name": "connectfour",
  "version": "1.0.0",
  "description": "A game of connect four.",
  "main": "server/server.js",
  "engines": {
    "node": "18.x"
  },
  "scripts": {
    "start": "node server/server.js",
    "client-start": "cd client && cross-env REACT_APP_API_URL=http://localhost:3002 npm start",
    "client-build": "cd client && npm run build",
    "server-install": "cd server && npm install",
    "server-build": "cd server && npm run build"
  },  

  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/connectfour.git"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
